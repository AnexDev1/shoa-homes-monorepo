# Database
DATABASE_URL="postgresql://username:password@localhost:5432/shoa_homes"

# Server
PORT=5000
NODE_ENV=production

# JWT
JWT_SECRET=replace_with_a_secure_random_string
JWT_EXPIRES_IN=7d

# Storage Provider (set to 'local' to use local file storage instead of Cloudinary)
STORAGE_PROVIDER=local

# Backend Base URL (needed for generating image URLs when using local storage)
BACKEND_BASE_URL=https://api.shoahomes.com

# Uploads Directory (optional, defaults to backend/uploads)
UPLOADS_DIR=/var/www/shoa-homes-monorepo/backend/uploads

# Cloudinary (optional - only needed if STORAGE_PROVIDER is not 'local')
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Admin seed credentials (optional)
ADMIN_EMAIL=admin@shoahomes.com
ADMIN_PASSWORD=ChangeMeNow!

# Frontend URL (CORS origin) - set your real frontend domain
FRONTEND_URL=https://your-frontend-domain.com
